{
    "manifest_version": 3,
    "name": "Never Ending GPT",
    "version": "1.2.1",
    "description": "Auto presses the 'Show more' button in ChatGPT's sidebar to load all previous chats.",
    "icons": {
      "48": "icon.png"
    },
    "content_scripts": [
      {
        "matches": [
          "https://chat.openai.com/chat",
          "https://chat.openai.com/chat/*"
        ],
        "js": [
          "content.js"
        ]
      }
    ],
    "action": {
      "default_icon": {
        "icon": "icon.svg"
      },
      "default_popup": {
        "popup": "popup.html"
      }
    }
  }
  